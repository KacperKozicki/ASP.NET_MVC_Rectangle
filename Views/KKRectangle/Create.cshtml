@model Rectangle.Models.KKRectangleModel
@{
    ViewData["Title"] = "Create Rectangle";
    var units = new List<string> { "mm", "cm", "m" };
}

<h2>Create Rectangle</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Height">Height</label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HeightUnit">Height Unit</label>
        <select asp-for="HeightUnit" asp-items="@(new SelectList(units))" class="form-control"></select>
        <span asp-validation-for="HeightUnit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Width">Width</label>
        <input asp-for="Width" class="form-control" />
        <span asp-validation-for="Width" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="WidthUnit">Width Unit</label>
        <select asp-for="WidthUnit" asp-items="@(new SelectList(units))" class="form-control"></select>
        <span asp-validation-for="WidthUnit" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>


